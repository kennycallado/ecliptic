---
import Layout from '$components/client/layouts/Layout.astro';
import TestDefer from '$components/server/TestDefer.astro';

const text = "Hello World!";
const needs = { auth: false, roles: [] };
---

<Layout
  needs={needs}
  title="About"
  page="How we are?"
  back={{enabled: false}}>

  <TestDefer
    text={text}
    server:defer>
    <h2 class="text-center" slot="fallback">{text}</h2>
  </TestDefer>
</Layout>
