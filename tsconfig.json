{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "$components/*": ["src/components/*"],
      "$assets/*": ["src/assets/*"],
      "$content/*": ["./src/content/*"],
      "$layouts/*": ["src/components/layouts/*"],
      "$lib/*": ["./src/lib/*"]
    }
  }
}
